FLASK_APP=run.py
FLASK_ENV=production
SECRET_KEY=change-this-to-a-secure-random-string

# Database Configuration
DATABASE_URL=postgresql://autolt_user:secure_password@localhost/autoltv2?options=-csearch_path%3Dautoltv2%2Cpublic

# JIRA Configuration (URL required, credentials from database preferred)
JIRA_URL=https://your-company.atlassian.net
# JIRA_USERNAME=your-email@company.com        # Fallback if not in database
# JIRA_API_TOKEN=your_jira_api_token_here     # Fallback if not in database

# Jenkins Configuration (URL required, credentials from database preferred)  
JENKINS_URL=https://your-jenkins-server.com
# JENKINS_USERNAME=jenkins_user               # Fallback if not in database
# JENKINS_TOKEN=your_jenkins_api_token_here   # Fallback if not in database

# Optional: Redis for caching
REDIS_URL=redis://localhost:6379/0